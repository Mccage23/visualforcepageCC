            <apex:facet name="start" >
                <img src="/img/loading.gif"/>
            </apex:facet>
        </apex:actionStatus>
        <apex:actionFunction name="getOrders" action="{!orderDetails}" reRender="details" status="actStatusId">
            <apex:param name="accId" assignTo="{!selectedCustomerId}" value=""/>
        </apex:actionFunction>
    </apex:form>

